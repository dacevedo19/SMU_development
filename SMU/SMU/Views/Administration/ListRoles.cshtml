@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Adminsitrar roles";
}

<h1>Adminsitrar roles</h1>
<a class="btn btn-primary" style="width:auto"
   asp-controller="Administration" asp-action="CreateRole"> Crear rol </a>
<hr />

@if (Model.Any()){

    foreach (var role in Model)
    {
        <div class="card mb-3" style="outline-color:black">
            <div class="card-header" style="background-color:gray">
                ID: @role.Id
            </div>
            <div class="card-body" style="background-color:lightgray">
                <h5 class="card-title"> Nombre: @role.Name </h5>
            </div>
            <div class="card-footer" style="background-color:lightgray">
                <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                    <a class="btn btn-primary" style="width:auto"
                       asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id"> Editar </a>
                    <button type="submit" class="btn btn-danger" style="width:auto"
                            onclick="return confirm('¿Está seguro de que quiere eliminar el rol @role.Name?')"> Eliminar </button>
                </form>
            </div>
        </div>
    }

}
else
{
    <div class="card">
        <div class="card-header">
            No hay roles creados
        </div>
        <div class="card-body">
            <h5 class="card-title"> Utilice los botones para crear un rol </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Administration" asp-action="CreateRole"> Crear rol </a>
        </div>
    </div>
}


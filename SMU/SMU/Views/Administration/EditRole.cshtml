@model EditRoleViewModel
@{
    ViewData["Title"] = "Editar rol";
}

<h1>Editar rol @Model.Name</h1>
<hr />

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" readonly class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm.10">
            <button type="submit" class="btn btn-primary"> Aceptar </button>
            <a class="btn btn-danger" style="width:auto"
               asp-controller="Administration" asp-action="ListRoles"> Cancelar </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Usuarios con este rol</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">No hay usuarios con este rol</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUserInRole" asp-controller="Administration" asp-route-roleId ="@Model.Id"
               class="btn btn-primary" style="width:auto">Agregar o remover usuarios</a>            
        </div>
    </div>


</form>


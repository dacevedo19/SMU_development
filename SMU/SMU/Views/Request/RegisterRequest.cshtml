@model RegisterRequestViewModel
@{
    ViewData["Title"] = "Solicitar licencia";        
}

<h1>Solicitar licencia</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="RegisterRequest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>                     

            <div class="form-group row">
                <label asp-for="SelectedRequestType" class="control-label"></label>
                <div class="col-sm-10">                    
                    <div>
                        @Html.DropDownListFor(m => m.SelectedRequestType, Model.ListOfTypes)
                    </div>                    
                </div>
            </div>
            <div class="form-group">
                <label asp-for="BeginDate" class="control-label"></label>
                <input asp-for="BeginDate" type="date" class="form-control" value="ViewBag.Today" />
                <span asp-validation-for="BeginDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" value="ViewBag.Today" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attachment" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="Attachment" class="form-control custom-file-input" />
                    <label class="custom-file-label">Seleccione un archivo</label>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm.10">
                    <input type="submit" value="Solicitar" class="btn btn-primary" />
                    <a class="btn btn-danger" style="width:auto"
                       asp-controller="Home" asp-action="Index"> Cancelar </a>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Atrás</a>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}


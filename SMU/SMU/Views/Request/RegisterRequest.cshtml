@model RegisterRequestViewModel
@{
    ViewData["Title"] = "Solicitar licencia";    
}

<h1>Solicitar licencia</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterRequest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="SelectedRequestType" class="control-label"></label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(x => x.SelectedRequestType, Model.TypesList, Model.RequestType)
                    <span asp-validation-for="SelectedRequestType" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="BeginDate" class="control-label"></label>
                <input asp-for="BeginDate" type="date" class="form-control" value="@Model.today" />
                <span asp-validation-for="BeginDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" value="@Model.today" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attachment" class="control-label"></label>
                <input asp-for="Attachment" class="form-control" />
                <span asp-validation-for="Attachment" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-sm.10">
                    <input type="submit" value="Solicitar" class="btn btn-primary" />
                    <a class="btn btn-danger" style="width:auto"
                       asp-controller="Home" asp-action="Index"> Cancelar </a>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Atrás</a>
</div>

